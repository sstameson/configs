{
  "title": "CAPS_LOCK to Control/Escape",
  "rules": [
    {
      "description": "CAPS_LOCK : CONTROL or ESCAPE (If Alone)",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
